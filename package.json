
{
  "name": "app-skeleton",
  "version": "0.0.2",
  "description": "",
  "scripts": {
    "build": "browserify --extension=.jsx ui/main.jsx | uglifyjs -cm > public/js/main.js",
    "start": "node scripts/serve.js & watchify --extension=.jsx -o public/js/main.js -v -d ui/main.jsx"
  },
  "browser": {
    "bootstrap": "./node_modules/bootstrap/dist/js/bootstrap.js",
    "sui": "./semantic/dist/semantic.js"
  },
  "browserify-shim": {
    "sui": {
      "depends": [
        "jquery:jQuery"
      ]
    }
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim"
    ]
  },
  "babel": {
    "plugins": [
      "add-module-exports"
    ],
    "presets": [
      "react",
      "es2015"
    ]
  },
  "dependencies": {
    "express": "*",
    "compression": "*",
    "browserify-shim": "*",
    "jquery": "*",
    "async": "*",
    "react-router": "*",
    "history": "*",
    "react": "*",
    "react-dom": "*",
    "babel-preset-react": "*",
    "babel-preset-es2015": "*",
    "babel-plugin-add-module-exports": "0.1.2"
  },
  "devDependencies": {
    "babelify": "*",
    "watchify": "*",
    "uglifyjs": "*",
    "standard": "*"
  },
  "standard": {
    "ignore": [
      "public/**",
      "scripts/*"
    ]
  }
}
